<div class="jumbotron container-fluid">
  <div class="text-center">
    <h1> <%= @url.address %> </h1>
  </div>
  <br>
  <div class="row col-md-6 col-md-offset-3">
    <div class="text-center">
      <p> This page provides detailed traffic analytics</p>
    </div>
  </div>
</div>

<div class="container-fluid">
  <div class="row">
    <div class="text-center col-md-6">
      <h4>Response Times</h4>
      <table class="table table-striped table-bordered table-hover table-sm">
        <%= erb :_response_time_table, locals: {average: @url.average_response_for_url, min: @url.min_response_for_url, max: @url.max_response_for_url} %>
      </table>
    </div>
    <div class="text-center col-md-6">
      <h4>All Response Times</h4>
      <table class="table table-striped table-bordered table-hover table-sm">
        <% @url.response_times_order.each_with_index do |time, index| %>
          <% if index % 2 == 1 %>
            <tr class="active">
              <td><%= time %></td>
            </tr>
          <% else %>
            <tr class="info">
              <td><%= time %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="text-center col-md-6">
      <h4>Popular Referrers</h4>
      <table class="table table-striped table-bordered table-hover table-sm">
        <% @url.top_three_referrers.each_with_index do |referrer, index| %>
          <% if index % 2 == 1 %>
            <tr class="active">
              <td><%= referrer %></td>
            </tr>
          <% else %>
            <tr class="info">
              <td> <%= referrer %></td>
            </tr>
          <% end %>
        <% end%>
      </table>
    </div>
    <div class="text-center col-md-6">
      <h4> Popular Agents </h4>
      <table class="table table-striped table-bordered table-hover table-sm">
        <% @url.popular_agents.each_with_index do |agent, index| %>
          <% if index % 2 == 1 %>
            <tr class="active">
              <td><%= agent %></td>
            </tr>
          <% else %>
            <tr class="info">
              <td><%= agent %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>
